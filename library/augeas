#!/usr/bin/python

class AugeasWrapper:
    def __init__(self):
        pass
    def defvar(self,*args,**kwargs):
        pass

    def load(self,*args,**kwargs):
        pass

    def touch(self,*args,**kwargs):
        pass

    def augprint(self,*args,**kwargs):
        pass

def main():
    module = AnsibleModule(
        argument_spec = dict(
            commands   = dict(required=True),
            augdebug  = dict(),
        ),
        supports_check_mode = True,
    )

    commands=module.params['commands']
    command_list=[]
    if type(commands) == type(''):
        # single string
        command_list.append(commands)
    elif type(commands) == type({}):
        for k in commands.keys():
            command_list.append((k,commands[k]))
    elif type(commands) == type([]):
        for c in commands:
            command_list.append(c)

    if module.params['augdebug']:
        f=open(module.params['augdebug'],'a')
        f.write(str(command_list)+"\n")
        f.close()

    module.exit_json(changed=True)

# import module snippets
from ansible.module_utils.basic import *
main()
